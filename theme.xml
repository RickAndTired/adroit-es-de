<theme>
   <!--<include>./files/system-metadata-master/${system.theme}.xml</include>-->
   <variables>
      <font>./files/akashi.ttf</font>
      <white>F3EFE0</white>
      <gray>434242</gray>
      <black>222222</black>
      <white2>D8D9DA</white2>
      <gray2>61677A</gray2>
      <black2>272829</black2>
      <manila>fff0cf</manila>
   </variables>

   <view name="system,gamelist">
      <image name="background">
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <path>./files/background.svg</path>
          <tile>false</tile>
          <zIndex>1</zIndex>
      </image>    
      <textlist name="list">
         <!--<indicators>symbols</indicators>
         <collectionIndicators>ascii</collectionIndicators>-->
         <selectorColor>00000000</selectorColor>
         <fontPath>${font}</fontPath>
         <fontSize>0.025</fontSize>
         <selectedColor>${white}</selectedColor>
         <selectedBackgroundColor>${gray}</selectedBackgroundColor>
         <primaryColor>${black}</primaryColor>
         <secondaryColor>${gray}</secondaryColor>
         <letterCaseAutoCollections>capitalize</letterCaseAutoCollections>
         <letterCaseCustomCollections>capitalize</letterCaseCustomCollections>
         </textlist>
      <image name="controller">
<!--    Center Right controller position
        <origin>0.5 0.5</origin>
        <maxSize>0.25 0.5</maxSize>
        <pos>0.815 0.5</pos>
-->      
        <origin>1 1</origin>
        <maxSize>0.234375 0.555555555555556</maxSize><!-- 300 400 -->
        <pos>0.9296875 0.75</pos>
        <color>${gray}</color>
        <path>./files/system-controllers/${system.theme}.svg</path>
      </image>
      <image name="Syslogo">
         <path>./files/logos/${system.theme}.svg</path>
         <pos>0.8125 0.91</pos>
         <origin>0.5 1</origin>
         <maxSize>0.25 0.15</maxSize>
         <color>${gray}</color>
      </image>    
<!--
        <text name="header">
            <origin>0.5 0</origin>
            <pos>0.5 0.035</pos>
            <text>**** HEADER TEXT ****</text>
            <fontPath>${font}</fontPath>
            <fontSize>0.03</fontSize>
            <lineSpacing>1</lineSpacing>
            <color>dbdbdb</color>  
         </text>
-->      
      <helpsystem name="help">
         <origin>0.5 0</origin>
         <pos>0.5 0.95</pos>
         <fontSize>0.025</fontSize>
         <textColor>${white}</textColor>
         <iconColor>${white}</iconColor>
         <fontPath>${font}</fontPath>
      </helpsystem>   
   </view>

   <view name="system">
         <text name="prompt">
            <text>Systems</text>
            <fontPath>${font}</fontPath>
            <fontSize>0.05</fontSize>
            <color>${white}</color>
         </text>  
<!--  
         <text name="description"> 
            <origin>1 1</origin>
            <size>0.25 0.5</size>
            <pos>0.9425 0.75</pos>
            <fontPath>${font}</fontPath>
            <fontSize>0.02</fontSize>
            <color>${white}</color>
            <text>${systemDescription}</text>
         </text>  
-->    
   </view>
   
   <view name="gamelist">
   
      <text name="system-name">
         <text>${system.fullName}</text>
         <fontPath>${font}</fontPath>
         <fontSize>0.05</fontSize>
         <color>${white}</color>
         <metadata>systemFullname</metadata>
      </text>
<!--   
      <text name="rating">
         <metadata>rating</metadata>
         <defaultValue>:space:</defaultValue>
      </text>

      <text name="players">
         <metadata>players</metadata>
         <defaultValue>:space:</defaultValue>
      </text>
     --> 
      <badges name="badges">
         <lines>1</lines>
         <itemsPerLine>9</itemsPerLine>
         <slots>folder, broken, favorite, completed, manual, kidgame, altemulator, collection</slots>
         <customBadgeIcon badge="folder">./files/images/badge-folder.svg</customBadgeIcon>
         <customBadgeIcon badge="broken">./files/images/badge-broken.svg</customBadgeIcon>
         <customBadgeIcon badge="completed">./files/images/badge-completed.svg</customBadgeIcon>
         <customBadgeIcon badge="favorite">./files/images/badge-favorite.svg</customBadgeIcon>
         <customBadgeIcon badge="kidgame">./files/images/badge-kidgame.svg</customBadgeIcon>
         <customBadgeIcon badge="collection">./files/images/badge-collection.svg</customBadgeIcon>
         <customBadgeIcon badge="controller">./files/images/badge-controller.svg</customBadgeIcon>
         <customBadgeIcon badge="altemulator">./files/images/badge-altemulator.svg</customBadgeIcon>
         <customBadgeIcon badge="manual">./files/images/badge-manual.svg</customBadgeIcon>
         <controllerSize>0.8</controllerSize>
         <origin>1 0</origin>
         <horizontalAlignment>center</horizontalAlignment>
         <direction>column</direction>
         <pos>0.99 0.25</pos>
         <size>0.05 0.5</size>
         <itemMargin>-1 0.0075</itemMargin> 
         <rotation>180</rotation>
         <badgeIconColor>${gray}</badgeIconColor>
         <folderLinkIconColor>${white}</folderLinkIconColor>
         <folderLinkSize>0.45</folderLinkSize>
         <folderLinkPos>0.5 0.475</folderLinkPos>
         <customFolderLinkIcon>./files/images/folderlink.svg</customFolderLinkIcon>
      </badges>
      <video name="video">
         <origin>1 1</origin>
         <delay>2.5</delay>
         <imageType>cover,screenshot,titlescreen</imageType>
         <pillarboxes>false</pillarboxes>
         <zIndex>50</zIndex>
         <defaultImage>./files/system-controllers/${system.theme}.svg</defaultImage>
      </video>
   </view>

      <aspectRatio name="16:9">
         <view name="system,gamelist">
            <text name="prompt">
               <pos>0.07 0.015</pos>
            </text>
            <textlist name="list">
               <pos>0.07 0.15</pos><!--horizontal vertical-->
               <size>0.5 0.75</size><!--width height-->
            </textlist>
            <image name="controller">
               <pos>0.9296875 0.75</pos>
               <maxSize>0.234375 0.555555555555556</maxSize><!-- 300 400 -->
            </image>
         </view>
         <view name="gamelist">
            <text name="system-name">
               <pos>0.07 0.015</pos>
               <letterCase>uppercase</letterCase>
            </text>
            <badges name="badges">
               <pos>0.99 0.25</pos>
            </badges>
            <video name="video">
               <pos>0.9296875 0.75</pos>
               <maxSize>0.234375 0.555555555555556</maxSize><!-- 300 400 -->
            </video>
         </view>
      </aspectRatio>
      
      
      <aspectRatio name="16:10">
         <view name="system,gamelist">
            <text name="prompt">
               <pos>0.07 0.015</pos>
            </text>
            <textlist name="list">
               <pos>0.07 0.15</pos>
               <size>0.5 0.75</size>
            </textlist>
            <image name="controller">
               <pos>0.94 0.75</pos><!-- 1062 630 -->
               <maxSize>0.260416666666667 0.555555555555556</maxSize><!-- 300 400 -->
            </image>
         </view>
         <view name="gamelist">
            <text name="system-name">
               <pos>0.07 0.015</pos>
               <letterCase>uppercase</letterCase>
            </text>
            <badges name="badges">
               <pos>0.99 0.25</pos>
            </badges>
            <video name="video">
               <pos>0.94 0.75</pos><!-- 1062 630 -->
               <maxSize>0.260416666666667 0.555555555555556</maxSize><!-- 300 400 -->
            </video>
         </view>
      </aspectRatio>
      
      
      <aspectRatio name="4:3">
         <view name="system,gamelist">
            <text name="prompt">
               <pos>0.07 0.0125</pos>
            </text>
            <textlist name="list">
               <pos>0.07 0.15</pos>
               <size>0.5 0.75</size>
            </textlist>
            <image name="Syslogo">
               <pos>0.7725 0.91</pos>
            </image>
            <image name="controller">
               <pos>0.925 0.75</pos><!-- 870 630 -->
               <maxSize>0.3125 0.555555555555556</maxSize><!-- 300 400 -->
            </image>
         </view>
         <view name="gamelist">
            <text name="system-name">
               <pos>0.07 0.0125</pos>
               <letterCase>uppercase</letterCase>
            </text>
            <badges name="badges">
               <pos>0.99 0.25</pos>
            </badges>
            <video name="video">
               <pos>0.925 0.75</pos><!-- 870 630 -->
               <maxSize>0.3125 0.555555555555556</maxSize><!-- 300 400 -->
            </video>
         </view>
      </aspectRatio>
 
 
 
   <variant name="Light">
      <view name="gamelist">
         <image name="controller">
            <visible>false</visible>
         </image>
         <video name="video">
            <defaultImage>./files/system-controller-light/${system.theme}.svg</defaultImage>
         </video>
      </view>
   </variant>  
   
   
   
   <variant name="Dark">
      <view name="system,gamelist">
         <image name="background">
            <path>./files/background-dark.svg</path>
         </image>  
         <helpsystem name="help">
            <textColor>${white}</textColor>
            <iconColor>${white}</iconColor>
            <fontPath>${font}</fontPath>
         </helpsystem>
         <text name="prompt">
            <color>${white}</color>
         </text>
         <textlist name="list">
            <selectedColor>${gray}</selectedColor>
            <selectedBackgroundColor>${white}</selectedBackgroundColor>
            <primaryColor>${white}</primaryColor>
            <secondaryColor>${manila}</secondaryColor>
            <selectedSecondaryColor>${black}</selectedSecondaryColor>
            <selectedSecondaryBackgroundColor>${white}</selectedSecondaryBackgroundColor>
         </textlist>
         <image name="controller">
            <color>${white}</color>
         </image>
         <image name="Syslogo">
            <color>${white}</color>
         </image>
      </view>
      <view name="gamelist">
         <text name="system-name">
            <color>${white}</color>
         </text>
      <image name="controller">
         <visible>false</visible>
      </image>
      <badges name="badges">
         <badgeIconColor>${white}</badgeIconColor>
         <folderLinkIconColor>${gray}</folderLinkIconColor>
      </badges>
      </view>
   </variant>  
   


   <variant name="LightNoArt">
      <view name="system,gamelist">
         <image name="Syslogo">
            <visible>true</visible>
         </image>
      </view>
      
      <view name="gamelist"> 
      <!--Horizontal badges for no art-->
         <!--<badges name="badges">
            <visible>true</visible>
            <direction>row</direction>
            <horizontalAlignment>right</horizontalAlignment>
            <origin>0 0</origin>
            <pos>0.685 0.45</pos>
            <size>0.3 0.3</size>
         </badges>-->
         <video name="video">
            <visible>false</visible>
         </video>
      </view>
   </variant>
   


   <variant name="DarkNoArt">
      <view name="system,gamelist">
          <image name="background">
            <path>./files/background-dark.svg</path>
         </image>  
         <helpsystem name="help">
            <textColor>${white}</textColor>
            <iconColor>${white}</iconColor>
            <fontPath>${font}</fontPath>
         </helpsystem>
         <text name="prompt">
            <color>${white}</color>
         </text>
         <image name="controller">
            <color>${white}</color>
         </image>
         <textlist name="list">
            <selectedColor>${gray}</selectedColor>
            <selectedBackgroundColor>${white}</selectedBackgroundColor>
            <primaryColor>${white}</primaryColor>
            <secondaryColor>${manila}</secondaryColor>
            <selectedSecondaryColor>${black}</selectedSecondaryColor>
            <selectedSecondaryBackgroundColor>${white}</selectedSecondaryBackgroundColor>
         </textlist>
         <image name="Syslogo">
            <visible>true</visible>
            <color>${white}</color>
         </image>
      </view>
      <view name="gamelist">
         <badges name="badges">
            <badgeIconColor>${white}</badgeIconColor>
            <folderLinkIconColor>${gray}</folderLinkIconColor>
            <!--<visible>true</visible>
            <direction>row</direction>
            <horizontalAlignment>right</horizontalAlignment>
            <origin>0 0</origin>
            <pos>0.685 0.45</pos>
            <size>0.3 0.3</size>-->
         </badges>
         <video name="video">
            <visible>false</visible>
         </video>
      </view>
   </variant> 
</theme>
