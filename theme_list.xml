   <fontSize name="medium">
      <variables>
        <listFontSize>0.025</listFontSize>
        <helpFontSize>0.025</helpFontSize>
        <sysPromptFontSize>0.05</sysPromptFontSize>
        <sysNameFontSize>0.05</sysNameFontSize>
      </variables>
   </fontSize>

   <fontSize name="large">
      <variables>
        <listFontSize>0.05</listFontSize>
        <helpFontSize>0.029</helpFontSize>
        <sysPromptFontSize>0.0625</sysPromptFontSize>
        <sysNameFontSize>0.0625</sysNameFontSize>
      </variables>
   </fontSize>

   <view name="system,gamelist">
      <image name="background">
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <path>${backgroundimage}</path>
          <tile>false</tile>
          <zIndex>1</zIndex>
      </image>
      <image name="backgroundimage">
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <path>${backgroundjpg}</path>
          <tile>false</tile>
          <zIndex>2</zIndex>
      </image>  
      <animation name ="backgroundgif">
          <path>${backgroundgif}</path>
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <zIndex>3</zIndex>
      </animation>
      <video name ="backgroundvideo">
          <path>${backgroundmp4}</path>
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <delay>0</delay>
          <fadeInTime>0</fadeInTime>
          <audio>true</audio>
          <zIndex>4</zIndex>
      </video>
      <textlist name="list">
         <!--<indicators>symbols</indicators>
         <collectionIndicators>ascii</collectionIndicators>-->
         <selectorColor>00000000</selectorColor>
         <fontPath>${font}</fontPath>
         <fontSize>${listFontSize}</fontSize>
         <selectedColor>${listselectedcolor}</selectedColor>
         <selectedBackgroundColor>${listselectedbgcolor}</selectedBackgroundColor>
         <selectedBackgroundMargins>0.004 0.004</selectedBackgroundMargins>
         <primaryColor>${listprimarycolor}</primaryColor>
         <secondaryColor>${listsecondarycolor}</secondaryColor>
         <selectedSecondaryColor>${selectedSecondaryColor}</selectedSecondaryColor>
         <selectedSecondaryBackgroundColor>${selectedSecondaryBackgroundColor}</selectedSecondaryBackgroundColor>
         <letterCaseAutoCollections>capitalize</letterCaseAutoCollections>
         <letterCaseCustomCollections>capitalize</letterCaseCustomCollections>
         <textHorizontalScrollDelay>2</textHorizontalScrollDelay>
      </textlist>
      <image name="controller">
<!--    
        Center Right controller position
        <origin>0.5 0.5</origin>
        <maxSize>0.25 0.5</maxSize>
        <pos>0.815 0.5</pos>
-->      
        <origin>0.5 1</origin>
        <maxSize>0.234375 0.4</maxSize><!-- 300 400 -->
        <pos>0.8125 0.75</pos>
        <color>${controllercolor}</color>
        <path>${controllerpath}</path>
      </image>
      <image name="Syslogo">
         <path>./files/logos/${system.theme}.svg</path>
         <pos>0.8125 0.91</pos>
         <origin>0.5 1</origin>
         <maxSize>0.25 0.15</maxSize>
         <color>${syslogocolor}</color>
      </image>    
<!--
        <text name="header">
            <origin>0.5 0</origin>
            <pos>0.5 0.035</pos>
            <text>**** HEADER TEXT ****</text>
            <fontPath>${font}</fontPath>
            <fontSize>0.03</fontSize>
            <lineSpacing>1</lineSpacing>
            <color>dbdbdb</color>  
         </text>
-->      
      <helpsystem name="help">
         <origin>0.5 0</origin>
         <pos>0.5 0.95</pos>
         <fontSize>${helpFontSize}</fontSize>
         <textColor>${white}</textColor>
         <iconColor>${white}</iconColor>
         <fontPath>${font}</fontPath>
      </helpsystem>   
   </view>

   <view name="system">
         <text name="prompt">
            <text>Systems</text>
            <fontPath>${font}</fontPath>
            <fontSize>${sysPromptFontSize}</fontSize>
            <color>${white}</color>
         </text>  
<!--  
         <text name="description"> 
            <origin>1 1</origin>
            <size>0.25 0.5</size>
