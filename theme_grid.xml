            <origin>0.5 0</origin>
            <pos>0.5 0.035</pos>
            <text>**** HEADER TEXT ****</text>
            <fontPath>${font}</fontPath>
            <fontSize>0.03</fontSize>
            <lineSpacing>1</lineSpacing>
