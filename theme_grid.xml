            <backgroundgif>./files/background.gif</backgroundgif>
            <backgroundmp4>./files/background.mp4</backgroundmp4>
        </variables>
    </colorScheme>  

   <view name="system,gamelist">
      <image name="background">
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <path>${backgroundimage}</path>
          <tile>false</tile>
          <zIndex>1</zIndex>
      </image>   
      <image name="backgroundimage">
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <path>${backgroundjpg}</path>
          <tile>false</tile>
          <zIndex>2</zIndex>
      </image>  
      <animation name ="backgroundgif">
          <path>${backgroundgif}</path>
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <zIndex>3</zIndex>
      </animation>
      <video name ="backgroundvideo">
          <path>${backgroundmp4}</path>
          <origin>0 0</origin>
          <pos>0 0</pos>
          <size>1 1</size>
          <delay>0</delay>
          <fadeInTime>0</fadeInTime>
          <zIndex>4</zIndex>
      </video>
